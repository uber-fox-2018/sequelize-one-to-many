<% include partials/header %>

<h1> Subjects Data </h1>
<p> <a href="/subjects/add">add subject</a> </p>
<div>
    <table id="tabel">
        <tr>
            <th>id</th>
            <th>Subject Name</th>
            <th>Teacher</th>
            <th>Options</th>
        </tr>
        <% for(let subject of subjects){ %>
            <td><%= subject.id %></td>
            <td><%= subject.subjectName %></td>
           
            <td><%= subject.Teachers.map((x,index)=>`${index+1}. ${x.firstName} ${x.lastName}`).join("\n") %></td>
            <td>
                <a href="/subjects/edit/<%= subject.id%>">Edit</a>   || 
                <a href="/subjects/delete/<%= subject.id%>" onclick="return confirm('Delete <%= subject.subjectName %> ?')">Delete</a>
            </td>
        </tr>
        <% } %>  
    </table>
</div>

<% include partials/footer %>