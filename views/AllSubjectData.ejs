<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>All Subjects Data</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>

<body>
    <center>
        <h1>All Subjects Data</h1>


        <table border="1px">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Subject Name</th>
                    <th>Teachers</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(subject => { %>
                    <tr>
                        <td>
                            <%= subject.dataValues.id %>
                        </td>
                        <td>
                            <%= subject.dataValues.name %>
                        </td>
                        <td>
                            <% let generator = 1%>
                            <% for(let i = 0 ; i < subject.dataValues.Teachers.length ;i++){ %>
                                <%= generator %>.
                                <% generator++ %>
                                <%= subject.dataValues.Teachers[i].firstName %>
                                <%= subject.dataValues.Teachers[i].lastName %>
                                <br>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </center>

</body>

</html>