<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Edit Teacher</title>
</head>

<body>
    <%- include('../partials/nav') %>

        <section style="padding-top: 80px">
            <div class="container">
                <div class="row" style="padding: 15px">
                    <h2>Edit teacher</h2>
                </div>

                <%- include('../partials/validation')%>

                <div class="row" style="padding: 15px">
                    <form action="/teachers/edit/<%=teacher.id%>" method="POST">
                        <div class="form-group">
                            <label for="first_name">First name</label>
                            <input id="first_name" name="first_name" value="<%=teacher.first_name%>" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="last_name">Last name</label>
                            <input id="last_name" name="last_name" value="<%=teacher.last_name%>" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input id="email" name="email" type="email" value="<%=teacher.email%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="subject_id">Subject</label>
                            <select id="subject_id" name="subject_id" value="<%=teacher.subject_id%>" class="form-control">
                                <option value="">--Select subject--</option>
                                <%subjects.forEach(subject => {%>
                                    <option <%=`${subject.id == teacher.subject_id ? 'selected' : ''}`%> value="<%=subject.id%>">
                                        <%=subject.subject_name%>
                                    </option>
                                <%})%>
                            </select>
                        </div>
                        <a href="/teachers" class="btn btn-secondary">Cancel</a>
                        <input type="submit" value="Edit" role="button" class="btn btn-success">
                    </form>
                </div>
                
            </div>
        </section>

        <%- include('../partials/scripts') %>
</body>

</html>