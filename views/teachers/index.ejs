<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head')%>
    <title>Teachers</title>
</head>
<body>
    <%- include('../partials/nav')%>

    <section style="padding-top: 80px">
        <div class="container">
            <div class="row" style="padding: 15px">
                <h2>Teachers</h2>
            </div>
            <div>
                <a href="teachers/add" class="btn btn-primary">Add teacher</a>
            </div>
            <div class="row" style="padding: 15px">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(teacher of teachers) {%>
                            <tr>
                                <td>
                                    <%=teacher.id%>
                                </td>
                                <td>
                                    <%=teacher.first_name%>
                                </td>
                                <td>
                                    <%=teacher.last_name%>
                                </td>
                                <td>
                                    <%=teacher.email%>
                                </td>
                                <td>
                                    <a href="/teachers/edit/<%=teacher.id%>" role="button" class="btn btn-success" >Edit</a>
                                    <a href="/teachers/delete/<%=teacher.id%>" role="button" class="btn btn-danger" >Delete</a>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <%- include('../partials/scripts')%>
</body>

</html>