<% include partials/header %>

<h1> Teachers Data </h1>
<p> <a href="/teachers/add">add teacher</a> </p>
<div>
    <table id="tabel">
        <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Options</th>
        </tr>
        <% for(let teacher of teachers){ %>
        <tr>
            <td><%= teacher.id %></td>
            <td><%= teacher.firstName %></td>
            <td><%= teacher.lastName %></td>
            <td><%= teacher.email %></td>
            <%if(teacher.subjectId !== null){  %>
                <td><%= teacher.Subject.subjectName%></td>
            <% }else{ %>
                <td>unassigned</td>
            <%} %>
            <td>
                <a href="/teachers/edit/<%= teacher.id%>">Edit</a>   |
                <a href="/teachers/delete/<%= teacher.id%>" onclick="return confirm('Delete <%= teacher.first_name%> <%= teacher.last_name%> ?')">Delete</a>
            </td>
        </tr>
        <% } %>  
    </table>
</div>

<% include partials/footer %>