<!doctype html>
<html lang="en">
<%- include('../partials/head', { title: 'Data Subject' }) %>

  <body>
    <%- include('../partials/navbar') %>
      <br>
      <br>
      <br>

      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            
            <center>
              <h1>Data Teacher</h1>
              <a href="/teacher/add" class="btn btn-primary">Add Teacher</a>
            </center>

            <br>
            <% if (error) { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong><%= error %></strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% } %>

            <table class="table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">First Name</th>
                  <th scope="col">Last Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Subject</th>
                  <th scope="col">Options</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(data => { %>
                  <tr>
                    <td><%= data.id %></td>
                    <td><%= data.first_name %></td>
                    <td><%= data.last_name %></td>
                    <td><%= data.email %></td>
                    <% if (data.Subject === null) { %>
                      <td>Unassigned</td>
                    <% } else { %>
                      <td><%= data.Subject.subject_name %></td>
                    <% } %>
                    <td>
                      <a href="/teacher/edit/<%= data.id %>" class="btn btn-primary btn-sm">Edit</a>
                      <a href="/teacher/delete/<%= data.id %>" class="btn btn-primary btn-sm">Delete</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>

          </div>
        </div>
      </div>

      <%- include('../partials/script') %>
  </body>

</html>